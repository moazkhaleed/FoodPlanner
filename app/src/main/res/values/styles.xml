<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="login">
        <item name="android:textSize">12sp</item>
        <item name="android:textColor">#000000</item>
    </style>

    <style name="black14">
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">#000000</item>
    </style>

    <style name="white14">
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">#ffffff</item>
    </style>

    <style name="btnPrimary">
        <item name="backgroundTint">#FF9900</item>
        <item name="cornerRadius">8dp</item>
        <item name="android:padding">16dp</item>
    </style>

    <style name="btnSecondary">
        <item name="backgroundTint">#D9D9D9</item>
        <item name="cornerRadius">8dp</item>
        <item name="android:padding">16dp</item>
    </style>

    <style name="txtFields">
        <item name="android:layout_width">match_parent</item>
        <item name="backgroundColor">@color/white</item>
        <item name="backgroundTint">@color/white</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginTop">44dp</item>
        <item name="android:background">@drawable/rounded</item>
        <item name="android:drawablePadding">12dp</item>
        <item name="android:textColor">@color/icon_color</item>
        <item name="elevation">8dp</item>
        <item name="android:foregroundGravity">center</item>
        <item name="android:gravity">clip_horizontal</item>
        <item name="android:paddingStart">20dp</item>
        <item name="android:paddingTop">15dp</item>
        <item name="android:paddingBottom">15dp</item>
        <item name="android:textColorHint">@color/icon_color</item>
    </style>

    <style name="textViews">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">15sp</item>
    </style>

    <style name="Headers">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">24sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:paddingStart">12dp</item>
    </style>


    <style name="RatingBar" parent="Theme.AppCompat">
        <item name="colorControlNormal">@color/neutral</item>
        <item name="colorControlActivated">@color/primary</item>
    </style>

    <style name="addToFavBtn">
        <item name="backgroundTint">#FF9900</item>
        <item name="cornerRadius">8dp</item>
        <item name="android:padding">8dp</item>
    </style>


    <style name="AppBarLayoutTheme" parent="@style/Theme.AppCompat.Light.NoActionBar">
        <item name="colorControlNormal">@color/primary</item>
        <item name="titleTextColor">@color/primary</item>
        <item name="windowActionBar">false</item>
    </style>

</resources>